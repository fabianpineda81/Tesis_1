<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/escoger_imagen_bottom_sheet"
        style="@style/BottomSheetItem"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:text="Escoger imagen"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tomar_foto_bottom_sheet"
        style="@style/BottomSheetItem"
        android:drawableStart="@drawable/ic_baseline_camera_alt_24"
        android:drawableLeft="@drawable/ic_baseline_camera_alt_24"
        android:text="Tomar foto"
        />
    </LinearLayout>





