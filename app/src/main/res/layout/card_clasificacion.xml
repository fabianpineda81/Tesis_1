
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:layout_margin="14dp"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:background="@drawable/ic_sombrero_de_la_graduacion"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="Clasificacion cientifÃ­ca "

                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="#403D3D"
                    android:typeface="normal" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:layout_weight="2.5"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/nombre_cientifico_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Familia:"
                    android:layout_weight="2.5"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/familia_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Genero:"
                    android:layout_weight="2.5"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:id="@+id/genero_planta"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />







        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

