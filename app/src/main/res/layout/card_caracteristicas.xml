<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="14dp"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:background="@drawable/ic_analisis"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="Caracteristicas"

                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="#403D3D"
                    android:typeface="normal" />
            </LinearLayout>




            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp">
             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="Tipo de planta:"
                 android:layout_weight="6"
                 android:layout_marginRight="15dp"
                 android:layout_gravity="center_vertical"

                 />
             <TextView
                 android:id="@+id/tipo_planta_planta"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="hierva "
                 android:layout_weight="7"
                 android:layout_gravity="center_vertical"
                 android:textStyle="bold"/>


         </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Altura:"
                    android:layout_weight="6"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/altura_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Diametro de la Copa:"
                    android:layout_weight="6"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/diametro_copa_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Diamtro de la Flor:"
                    android:layout_weight="6"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/diametro_flor_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Floracion:"
                    android:layout_weight="6"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/floracion_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Epoca:"
                    android:layout_weight="6"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/epoca_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="hierva "
                    android:layout_weight="7"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCCECE" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

