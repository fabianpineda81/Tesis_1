<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_planta"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_card_view"
    cardview:cardCornerRadius="15dp"
    android:layout_marginTop="15sp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/card_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_card_view"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:transitionName="@string/name_trasition"
            />
        <LinearLayout
            android:id="@+id/card_texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_text_nombre_planta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textSize="@dimen/card_text_size_user_name"
                android:textColor="@android:color/white"
                android:paddingLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/card_like_margin_top"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                >

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/card_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@drawable/selector_checkbox"
                    />

            </LinearLayout>



        </LinearLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>